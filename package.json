{
  "name": "my-backend-project",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias && npm run compile:migrations",
    "start": "NODE_ENV=production node -r ts-node/register --transpile-only src/index.ts",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "dev:watch": "PORT=4005 nodemon -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "postinstall": "npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "migrate": "ts-node src/model.ts",
    "compile:migrations": "npx tsc src/migrations/*.ts --outDir dist/migrations --module commonjs --target es2020 --skipLibCheck",
    "migration:run": "NODE_ENV=production ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run -d src/database/connection.ts",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -d src/database/connection.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "dotenv": "16.6.1",
    "moleculer": "0.14.28",
    "tsc-alias": "^1.8.10",
    "moleculer-web": "^0.10.6",
    "nodenv": "0.1.0",
    "pg": "8.11.3",
    "reflect-metadata": "0.2.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "0.3.17",
    "ts-node": "^10.9.2",
    "debug": "4.4.3",
    "ms": "2.1.3"
  },
  "devDependencies": {
    "@types/node": "24.10.0",
    "nodemon": "3.0.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "@types/debug": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}